<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/Welcometext"
        android:layout_width="232dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/hello"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="64dp" />

    <Button
        android:id="@+id/ButtonConnect"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="14dp"
        android:text="Connect"
        tools:layout_editor_absoluteY="320dp"></Button>

    <Button
        android:id="@+id/ButtonDisconnect"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/ButtonConnect"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Disconnect"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="318dp"></Button>

    <EditText
        android:id="@+id/labelHeartRate"
        android:layout_width="38dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/HRTextBox"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="000"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="367dp"></EditText>

    <TextView
        android:id="@+id/HRTextBox"
        android:layout_width="134dp"
        android:layout_height="40dp"
        android:layout_above="@+id/StatusTextBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text=" Heart Rate"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="373dp" />

    <TextView
        android:id="@+id/StatusTextBox"
        android:layout_width="143dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/labelStatusMsg"
        android:layout_marginTop="12dp"
        android:text="Status Message"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="393dp" />

    <EditText
        android:id="@+id/labelStatusMsg"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Status Message Box"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="455dp"></EditText>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="285dp"
        android:layout_below="@+id/Welcometext"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/instructions"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="28dp" />

    <Button
        android:id="@+id/heartmatchbutton"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_alignBaseline="@+id/ButtonDisconnect"
        android:layout_alignBottom="@+id/ButtonDisconnect"
        android:layout_centerHorizontal="true"
        android:text="HeartMatch"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="320dp" />


</RelativeLayout>